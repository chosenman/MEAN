<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>


    <h1>Edit animal</h1>
    <% if(typeof(errors) != 'undefined' ) { %>
        <% for (var x in errors) { %>
         <h3><%= errors[x].message %></h3>
        <% } %>
    <% } %>


    <% for (i in context) { %>

      <form class="" action="/animal/edit/<%= context[i]._id %>" method="post">
        <p>
          Name:
          <input type="text" name="name" value="<%= context[i].name %>">
        </p>
        <p>
          Description:
          <input type="text" name="des" value="<%= context[i].description %>">
        </p>
        <input type="submit" name="" value="Save">
      </form>
    <% } %>
<hr>
<a href="/">Go back</a>

  </body>
</html>
